.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__group test
      %ul.main-header__left-box__menber
        %li.main-header__left-box__menber__list
          list :
        %li.main-header__left-b0x__menber__name
          name
    = link_to "#", class:"main-header__edit-btn" do
      Edit
  .main-contents
    .message
      .message__box
        %p.message__box__name name
        %p.message__box__date 2020/02/07
      %p.massage__text hello world
  .main-footer
    .form.new-massage
      = form_for [@group, @message] do |f|
        .input-box
          =f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'