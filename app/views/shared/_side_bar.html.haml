.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__name
      = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__newgroup
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-header__box__edituse
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__last-message
            メッセージはありません
